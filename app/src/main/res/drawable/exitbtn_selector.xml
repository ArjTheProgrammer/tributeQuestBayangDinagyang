<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:src="@drawable/exitbtn"/>
            </item>
            <item>
                <color android:color="#66000000"/>  <!-- Semi-transparent black overlay -->
            </item>
        </layer-list>
    </item>
    <!-- Normal state -->
    <item>
        <bitmap android:src="@drawable/exitbtn"/>
    </item>
</selector>