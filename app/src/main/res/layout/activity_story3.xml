<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Story3"
    android:background="@drawable/story_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/story_page3"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/prev_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/selector_prev"
        android:onClick="toPrev"
        android:contentDescription="to previous"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

<!--    <ImageView-->
<!--        android:id="@+id/next_button"-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:src="@drawable/button_mechanics_next"-->
<!--        android:onClick="toMechanics"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_centerVertical="true"/>-->

    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_play"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_marginBottom="20dp"
        android:onClick="toMechanics"
        android:contentDescription="to mechanics"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>